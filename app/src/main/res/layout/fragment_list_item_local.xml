<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <!--文件及文件夹list-->
    <ImageView
        android:id="@+id/list_item_image_folder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/folder2" />

    <TextView
        android:id="@+id/list_item_txt_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_item_image_folder"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/list_item_image_folder"
        android:layout_marginTop="5dp"
        android:text="@string/list_item_file_name"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_txt_file_lastdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_item_txt_file_name"
        android:layout_alignBottom="@+id/list_item_image_folder"
        android:layout_marginTop="10dp"
        android:text="@string/list_item_file_lastdate"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/list_item_ckeckBox_file_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:checked="false"
        android:clickable="true"
        android:visibility="invisible" />
</RelativeLayout>
